<div class="row">
<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<p><%= e %></p>
<% end %>
<% end %>
</div>

<div class="row">
<div id="registration" class="col-md-6">
<h1>Registration</h1>
<%= form_for @user do |f| %>
<div class="form-group">
<%= f.label:name %>:
<%= f.text_field:name %>
</div>
<div class="form-group">
<%= f.label:email %>:
<%= f.email_field:email %>
</div>
<div class="form-group">
<%= f.label:password %>:
<%= f.password_field:password %>
</div>
<div class="form-group">
<%= f.label:password_confirmation %>:
<%= f.text_field:password_confirmation%>
</div>
<%= f.submit %>
<% end %>
</div>
<div id="login" class="col-md-6">
<h1>Login</h1>
</div>
</div>
